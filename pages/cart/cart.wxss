
.cart_box{
  width: 100%;
  height: 100px;
  margin-top:30px;
  text-align: center;
}
.cart_box .p{
  display: block;
  margin:10px 0;
  font-size: 12px;
  color:#808080;
}
.cart_box .btn{
  font-size: 12px;
  width: 100px;
  height: 30px;
  line-height: 27px;
  border: 1px solid #b70000;
  color:#fff;
  background-color: #d81e06;
  border-radius: 7px;
}
.face_camera {
  position: absolute;
  top: 36%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 500rpx;
  height: 660rpx;
  border-radius: 50%;
  border: 10rpx solid #1FA4FC;
}
button.cu-btn {
  position: absolute;
  left: 50%;
  bottom:20%;
  transform: translate(-50%);
  width: 220rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1FA4FC;
  color:#fff;
  font-size: 15px;
}
.videos{
  position: absolute;
  left: 20%;
  bottom: 30%;
  font-size: 15px;
  color: #999999;
}