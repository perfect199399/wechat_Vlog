/* pages/details/details.wxss */
@import '../../style/weui.wxss';
@import '../../style/weuiFlex.wxss';

.page{
  background: #fff;
}
.slide-image{ 
  width: 100%;
  height: 100%;
}
.weui-flex__item{
  width: 25%;
  height: 50px;
  overflow: hidden;
  padding: 10px;
  font-size: 8px;
}
.weui-search-bar__form{
  border-radius: 50%;
  background: rgb(177, 10, 10)
}
.uploadWrap{width:100%; display: flex; display: -webkit-box; flex-direction: column;}  
.upload_Item{ 
  width: 160rpx;
  height: 160rpx;
  padding:10px 15px 10px 15px;
  flex: 1;
  }  
.upload_Item>image{width:100%;height: 100%;border-radius: 15px;}
/* 主要商品展示区域 */
.weui-flex .top{
  height: 160px;
  overflow: hidden;
}
.weui-flex .top image{
  height: 160px;
  width: 100%;
  border-radius: 10px;
}
.weui-flex .demo{
  width: 100%;
  height: 100%;
  overflow: hidden;
  font-size: 15px;
}
.weui-flex .item image{
  height: 150px;
  width: 100%;
  border-radius: 10px;
}
.map{
  display: flex;
  margin-top: 30px;
  align-items: center;
  justify-content:space-between;
}
.openMap{
  flex: 1;
  width: 100%;
  height: 150rpx;
}
.strategy{
  width: 100%;
  height: 150rpx;
  margin-left: 5px;
}
